                                                                    <i class="fas fa-ban "></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a class="btn btn-lg" asp-controller="Solicitudes" asp-action="EditarDestino" asp-route-IdDestinos="@destino.IdDestinos" id="accion">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                            }
                                                        </td>

                                                        <td>
                                                            @if (@ViewBag.Deshabilitar == true)
                                                            {
                                                                <a class="btn btn-lg">
                                                                    <i class="fas fa-ban "></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a class="btn btn-lg" onclick="EliminarDestino(@destino.IdDestinos)" id="accion">
                                                                    <i class="fas fa-eraser"></i>
                                                                </a>
                                                            }
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>


                        </div>
                        <div id="Gastos" class="container tab-pane fade">
                            <br>
                            <h3>Gastos</h3>
                            <input type="Button" value="Agregar" class="btn" id="Button" onclick="RegistrarGasto()" disabled="@ViewBag.Deshabilitar" />
                            <div class="container">
                                <div class="table table-responsive">
                                    <table class="table table-hover text-center">
                                        <thead>

                                            <tr>
                                                <th>#</th>
                                                <th>Empresa</th>
                                                <th>Concepto</th>
                                                <th>Monto Máximo</th>
                                                <th>Importe Solicitado</th>
                                                <th>Descripcion</th>
                                                <th>Tipo Cambio</th>
                                                <th>Editar</th>
                                                <th>Eliminar</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var g in @Model.Gastos)
                                            {
                                            <tr>
                                                <td>@g.IdGastos</td>
                                                <td>@g.Empresa</td>
                                                <td>@g.Nombre</td>


                                                <td>@g.MontoMaximo</td>
                                                @if (@g.MontoMaximo < @g.ImporteSolicitado)
                                                {
                                                    <td style="color:red;">@g.ImporteSolicitado</td>
                                                }
                                                else
                                                {
                                                    <td style="color:green;">@g.ImporteSolicitado</td>
                                                }
                                                <td>@g.Descripcion</td>
                                                <td>@g.TipoCambios</td>
                                                <td>
                                                    @if (@ViewBag.Deshabilitar == true)
                                                    {
                                                        <a class="btn btn-lg">
                                                            <i class="fas fa-ban "></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-lg" asp-controller="Solicitudes" asp-action="EditarGastos" asp-route-IdGastos="@g.IdGastos" id="accion">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                </td>
                                                <td>
                                                    @if (@ViewBag.Deshabilitar == true)
                                                    {
                                                        <a class="btn btn-lg">
                                                            <i class="fas fa-ban "></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-lg" onclick="EliminarGasto(@g.IdGastos)" id="accion">
                                                            <i class="fas fa-eraser"></i>
                                                        </a>
                                                    }

                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>


            </div>
        </div>
    </div>
</form> 
