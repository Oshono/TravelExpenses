    function ModificarSolicitud() {
        var Moneda = $(".Moneda").children("option:selected").val();
        var Importe = $("#Importe").children("option:selected").val();
        var Tipo = $(".Tipo").children("option:selected").val();
        var form = $("#FormSolicitudes").serialize();
        var Folio = $("#folio").val();
        var url = "/Solicitudes/ModificarSolicitud/";
        if (Moneda == "" || Importe=="" || Tipo=="") {
            alert("Favor de llenar todos los campos");
        }
        else {


            $.ajax({
                url: url,
                data: form,
                type: "POST",
                cache: false,
                success: function (response) {
                    alert("Solicitud actualizada");
                    window.location.href = "../";
                },
                error: function (error) {
                    alert("Error: " + error);
                    console.log(error);
                }

            });
        }
    }

