@model TravelExpenses.ViewModels.DestinoViewModel



<h1>Destinos</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="@Model.IdCiudad" />
                <div class="form-group">
                    <label class="control-label">País</label>
                    @Html.DropDownListFor(x => Model.Paises, new SelectList(Model.Paises, "ClavePais", "Nombre"), htmlAttributes: new { @class = "form-control", id = "Pais", onchange = "CargaEstados(this.value);" })
                    <span class="text-danger" asp-validation-for="Paises"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    @Html.DropDownListFor(x => Model.Estados, new SelectList(Model.Estados, "IdEstado", "Descripcion"), htmlAttributes: new { @class = "form-control", id = "Estado", onchange = "CargaEstados(this.value);" })
                    <span class="text-danger" asp-validation-for="Ciudad.Estado"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Ciudad</label>
                    <input asp-for="Ciudad.Ciudad" class="form-control" />
                    <span class="text-danger" asp-validation-for="Ciudad.Ciudad"></span>
                </div>


                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="submit" class="btn btn-primary">Cancelar</button>
            </form>
        </div>
    </div>

</div>

