@model TravelExpenses.ViewModels.DestinoViewModel



<h1>Destinos</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="@Model.Ciudad.IdCiudad" />
                <div class="form-group">
                    <label class="control-label">País</label>
                    @Html.DropDownListFor(x => Model.Paises, new SelectList(Model.Paises, "ClavePais", "Nombre"), htmlAttributes: new { @class = "form-control", id = "Pais", onchange = "CargaEstados(this.value);" })
                    <span class="text-danger" asp-validation-for="Paises"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    @Html.DropDownListFor(x => Model.Estados, new SelectList(Model.Estados, "IdEstado", "Descripcion"), htmlAttributes: new { @class = "form-control", id = "Estado", onchange = "CargaCiudades(this.value);" })
                    <span class="text-danger" asp-validation-for="Estados"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Ciudad</label>
                    @Html.DropDownListFor(x => Model.Ciudades, new SelectList(Model.Ciudades, "IdCiudad", "Descripcion"), htmlAttributes: new { @class = "form-control", id = "Estado", onchange = "" })
                    <input asp-for="Ciudades" class="form-control" />
                    <span class="text-danger" asp-validation-for="Ciudad.Ciudad"></span>
                </div>


                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="submit" class="btn btn-primary">Cancelar</button>
            </form>
        </div>
    </div>

</div>
<script type="text/javascript">
    function CargaCiudades(IdEstado) {
        var url = "/Destino/Estados/";

        ClavePais = ""

        $.ajax({
            url: url,
            data: {
                ClavePais: ClavePais,
                IdEstado: IdEstado
                },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>Seleccione</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].IdColonia + ">" + data[x].Colonia + "</option>";
                }
                $("#IdColonia").html(markup).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }
</script>
