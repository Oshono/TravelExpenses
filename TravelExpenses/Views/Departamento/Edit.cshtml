@model TravelExpenses.ViewModels.DepartamentoViewModel



<h1>@Model.Departamento.Nombre</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Clave Departamento</label>
                    <input asp-for=@Model.Departamento.ClaveDepto class="form-control" />
                    <span asp-validation-for=@Model.Departamento.ClaveDepto class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción Departamento</label>
                    <input asp-for=@Model.Departamento.Nombre class="form-control" />
                    <span asp-validation-for=@Model.Departamento.Nombre class="text-danger"></span>
                </div>
                <div class="form-group">
                    Activo <input asp-for=@Model.Departamento.Activo class="form-check" type="checkbox" />
                    <span asp-validation-for=@Model.Departamento.Activo class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

