@model TravelExpenses.ViewModels.CentroCostoEmpresaViewModel
@{
    ViewData["Title"] = "Centro de Costos";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Centro de Costos - Empresa</h1>

<form method="post">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="form-group">
                        <label class="control-label">Empresa</label>
                        @Html.DropDownListFor(x => Model.Empresas, new SelectList(Model.Empresas, "RFC", "Nombre"), htmlAttributes: new { @class = "form-control", id = "Empresa" })
                        <span class="text-danger" asp-validation-for="Empresas"></span>
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>

                    <table id="data-table-basic" class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Clave Centro de Costo
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Asignar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var centro in Model.CentroCostos)
                            {

                                <tr>
                                    <td>@centro.ClaveCentroCosto</td>
                                    <td>@centro.Nombre</td>
                                    <td>
                                        <input type="checkbox" value=@centro.Activo/>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</form>