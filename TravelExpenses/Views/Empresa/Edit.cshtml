@model TravelExpenses.ViewModels.EmpresaViewModel

<h1>@Model.Empresa.Nombre</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">RFC</label>
                    <input asp-for=@Model.Empresa.RFC class="form-control" placeholder="RFC de la Empresa" />
                    <span asp-validation-for=@Model.Empresa.RFC class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción Empresa</label>
                    <input asp-for=@Model.Empresa.Nombre class="form-control" placeholder="Nombre o Razón Social" />
                    <span asp-validation-for=@Model.Empresa.Nombre class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label class="control-label">Fecha Alta</label>
                    <input asp-for=@Model.Empresa.FechaAlta class="form-control"   data-provide="datepicker" data-date-autoclose="true" data-date-format="dd/MM/yyyy"/>
                    <span asp-validation-for=@Model.Empresa.FechaAlta class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    Activo <input asp-for=@Model.Empresa.Activo class="form-check" type="checkbox" />
                    <span asp-validation-for=@Model.Empresa.Activo class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
