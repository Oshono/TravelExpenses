
@model TravelExpenses.Pages.Catalogs.EmpresasModel
@{
    ViewData["Title"] = "Empresas";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Empresas</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">RFC</label>
                    <input asp-for="Empresa.RFC" class="form-control" />
                    <span asp-validation-for="Empresa.RFC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción Empresa</label>
                    <input asp-for="Empresa.Nombre" class="form-control" />
                    <span asp-validation-for="Empresa.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha Alta</label>
                    <input asp-for="Empresa.FechaAlta" class="form-control" />
                    <span asp-validation-for="Empresa.FechaAlta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
