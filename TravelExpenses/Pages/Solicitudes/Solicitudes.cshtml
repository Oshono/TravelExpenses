@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="text-left">
        <div class="card">
            <div class="card-header">
                Registro de solicitudes
            </div>
            <div class="card-body ">
                <div class="row">
                    <div class="col-2">
                        Tipo:
                    </div>
                    <div class="col-2">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle"
                               href="#" role="button" id="Button"
                               data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                Concepto:
                            </a>
                            <div class="dropdown-menu" aria-labelledby="concepto">
                                <a class="dropdown-item" href="#">action</a>
                                <a class="dropdown-item" href="#">another action</a>
                                <a class="dropdown-item" href="#">something else here</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-2">Estatus:</div>
                    <div class="col-2">
                        <input type="text" class="form-control" value="Solicitud capturada" disabled />
                    </div>
                    <div class="col-2">Folio:</div>
                    <div class="col-2">
                        <input type="text" class="form-control" value="F001" disabled id="disabled" />
                    </div>
                </div>
                <br />
                @* Another section *@
                <div class="row">
                    <div class="col-2">
                        Departamento:
                    </div>
                    <div class="col-2">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle"
                               href="#" role="button" id="Button"
                               data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                IT
                            </a>
                            <div class="dropdown-menu" aria-labelledby="Concepto">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-2">Solicitante:</div>
                    <div class="col-2">
                        <input type="text" class="form-control" disabled value="Luis Mario Díaz" id="disabled" />
                    </div>
                    <div class="col-2">Número acreedor:</div>
                    <div class="col-2">
                        <input type="text" class="form-control" disabled value="17" id="disabled" />
                    </div>
                </div>
                <br />
                @* Another section *@
                <div class="row">
                    <div class="col-2">
                        Cantidad requerida
                    </div>
                    <div class="col-2">
                        <input type="text" class="form-control" />
                    </div>
                    <div class="col-2">
                        Suma de los comprobantes
                    </div>
                    <div class="col-2">
                        <input type="text" class="form-control" />
                    </div>

                    <div class="col-2">
                        Moneda:
                    </div>

                    <div class="col-2">
                        <input type="text" class="form-control" />
                    </div>
                </div>

                <hr />
                <div class="container">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#Destinos">Destinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Anticipos">Anticipos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Imputacion">Gastos</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="Destinos" class="container tab-pane active">
                            <br>
                            <h3>Destinos</h3>
                            <div class="container">
                                <div class="row">

                                    <div class="col-5">
                                        <button class="btn" id="Button" data-toggle="modal"
                                                data-target="#exampleModal" data-backdrop="static"
                                                data-keyboard="false">
                                            Agregar
                                        </button>
                                        <button href="#" class="btn" id="Button" data-toggle="modal"
                                                data-target="#exampleModal" data-backdrop="static"
                                                data-keyboard="false">
                                            Editar
                                        </button>
                                        <button href="#" class="btn" id="Button" disabled>Eliminar</button>
                                    </div>
                                    <div class="col"></div>
                                </div>


                                <div class="row">
                                    <div class="table-responsive">
                                        <table class="table table-hover text-center">
                                            <thead>
                                                <tr>
                                                    <th>País destino</th>
                                                    <th>Ciudad Destino</th>
                                                    <th>Fecha de Salida</th>
                                                    <th>Fecha de Llegada</th>
                                                    <th>Motivo</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>


                        </div>
                        <div id="Anticipos" class="container tab-pane fade">
                            <br>
                            <h3>Anticipos</h3>

                        </div>
                        <div id="Imputacion" class="container tab-pane fade">
                            <br>
                            <h3>Imputación a centros de Costo</h3>

                        </div>
                    </div>
                </div>
                <hr />
                <div class="container">
                    <div class="row">
                        <div class="col-5">
                            <a href="#" class="btn" id="Button">Cerrar</a>
                            <button type="submit" class="btn" id="Button">Guardar</button>
                            <a href="#" class="btn" id="Button">Enviar a autorización</a>
                        </div>
                        <div class="col"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content ">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Agregar destino</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container text-left">
                        <div class="row">
                            <div class="col-2">
                                País destino
                            </div>
                            <div class="col-4">
                                <div class="dropdown">
                                    <a class="btn btn-secondary dropdown-toggle"
                                       href="#" role="button" id="Button"
                                       data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        Selecciona país
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="concepto">
                                        <a class="dropdown-item" href="#">action</a>
                                        <a class="dropdown-item" href="#">another action</a>
                                        <a class="dropdown-item" href="#">something else here</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-2">
                                Ciudad Destino
                            </div>
                            <div class="col-4">
                                <div class="dropdown">
                                    <a class="btn btn-secondary dropdown-toggle"
                                       href="#" role="button" id="Button"
                                       data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        Selecciona ciudad
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="concepto">
                                        <a class="dropdown-item" href="#">action</a>
                                        <a class="dropdown-item" href="#">another action</a>
                                        <a class="dropdown-item" href="#">something else here</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-3">
                                Fecha salida:
                            </div>
                            <div class="col-3">
                                <input class="form-control" type="text" id="fechas" />
                            </div>
                            <div class="col-3">
                                Fecha llegada:
                            </div>
                            <div class="col-3">
                                <input class="form-control" type="text" id="datepicker" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-3">
                                Motivo del viaje:
                            </div>
                            <div class="col-3">
                                <textarea class="form-control" rows="2" cols="2" id="textarea"></textarea>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn" id="Button">Guardar</button>
                    <button type="button" class="btn" data-dismiss="modal" id="btnCancelar">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}