@page
@model TravelExpenses.Pages.Catalogs.DepartamentosModel
@{
    ViewData["Title"] = "Departamentos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Departamentos</h1>


<div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Clave Departamento</label>
                        <input asp-for="Departamento.ClaveDepto" class="form-control" />
                        <span asp-validation-for="Departamento.ClaveDepto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input asp-for="Departamento.Nombre" class="form-control" />
                        <span asp-validation-for="Departamento.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

