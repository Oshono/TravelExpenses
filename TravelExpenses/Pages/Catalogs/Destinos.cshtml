@page
@model TravelExpenses.Pages.Catalogs.CiudadesModel
@{
    ViewData["Title"] = "Destinos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Destinos</h1>
<form method="post">

    <input type="hidden" asp-for="Ciudad.IdCiudad" />
    <div class="form-group">
        <label asp-for="Ciudad.Estado.Pais"></label>
        @Html.DropDownListFor(x => Model.Paises, new SelectList(Model.Paises, "ClavePais", "Nombre"), htmlAttributes: new { @class = "form-control", id = "Pais" })
        <span class="text-danger" asp-validation-for="Paises"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ciudad.Estado"></label>
        @Html.DropDownListFor(x => Model.Estados, new SelectList(Model.Estados, "IdEstado", "NombreEstado"), htmlAttributes: new { @class = "form-control", id = "Estado" })
        <span class="text-danger" asp-validation-for="Ciudad.Estado"></span>
    </div>   
    <div class="form-group">
        <label asp-for="Ciudad.Ciudad"></label>
        <input asp-for="Ciudad.Ciudad" class="form-control" />
        <span class="text-danger" asp-validation-for="Ciudad.Ciudad"></span>
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>
    <button type="submit" class="btn btn-primary">Cancelar</button>
</form>
<table class="table">
    <th>
       <td>Estado</td>
        <td>Clave Ciudad</td>
        <td>Ciudad</td>
    </th>
    @foreach (var ciudad in Model.Ciudades)
    {
        <tr>
            <td>@ciudad.Estado.NombreEstado</td>
            <td>@ciudad.IdCiudad</td>
            <td>@ciudad.Ciudad</td>
        </tr>
    }
</table>
